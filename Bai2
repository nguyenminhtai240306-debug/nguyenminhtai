        <?php
        $arr=array("Tokyo", "Mexico City", "New York City", "Mumbai", "Seoul", "Shanghai", "Lagos", "Buenos Aires", "Cairo", "London");
        foreach($arr as $i){
            echo "$i, ";
        }
        
        sort($arr);
        echo "<br><ul>";
        foreach($arr as $i){
            echo "<li>$i</li>";
        }
        echo "</ul>";

        $arr[]="Los Angeles";
        $arr[]= "Calcutta";
        $arr[]= "Osaka";
        $arr[]= "Beijing";
        sort($arr);
        echo "<br><ul>";
        foreach($arr as $i){
            echo "<li>$i</li>";
        }
        echo "</ul>";
        ?>
